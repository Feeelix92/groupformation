<?xml version="1.0" encoding="UTF-8" ?>
	<XMLDB PATH="mod/groupformation/db" VERSION="20101203" COMMENT="XMLDB file for Moodle mod/groupformation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
	>
	
	<TABLES>
		<TABLE NAME="groupformation" COMMENT="Default comment for groupformation, please edit me">
			<FIELDS>
				<FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
				<FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="Course newmodule activity belongs to"/>
				<FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="name field for moodle instances"/>
				<FIELD NAME="intro" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="General introduction of the newmodule activity"/>
				<FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" COMMENT="Format of the intro field (MOODLE, HTML, MARKDOWN...)"/>
				<FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false"/>
				<FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
				<FIELD NAME="timeopen" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
				<FIELD NAME="timeclose" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
				<FIELD NAME="grade" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="100" SEQUENCE="false" COMMENT="The maximum grade. Can be negative to indicate the use of a scale."/>
			</FIELDS>

			<KEYS>
				<KEY NAME="primary" TYPE="primary" FIELDS="id"/>
			</KEYS>

			<INDEXES>
				<INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
			</INDEXES>
		</TABLE>
		<TABLE NAME="groupformation_question" COMMENT="save things according to a question">
			<FIELDS>
				<FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="true"/>
				<FIELD NAME="groupformation" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
				<FIELD NAME="type" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
				<FIELD NAME="page" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
				<FIELD NAME="question" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
				<FIELD NAME="category" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
				<FIELD NAME="options" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
			</FIELDS>
			
			<KEYS>
				<KEY NAME="primary" TYPE="primary" FIELDS="id"/>
				<KEY NAME="groupformation" TYPE="foreign" FIELDS="groupformation" REFTABLE="groupformation" REFFIELDS="id"/>
			</KEYS>
		</TABLE>
		<TABLE NAME="groupformation_answer" COMMENT="save the answer to the question">
			<FIELDS>
				<FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="true"/>
				<FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
				<FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
				<FIELD NAME="answer" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
			</FIELDS>
			
			<KEYS>
				<KEY NAME="primary" TYPE="primary" FIELDS="id"/>
				<KEY NAME="id" TYPE="foreign" FIELDS="questionid" REFTABLE="groupformation_question" REFFIELDS="id"/>
			</KEYS>
			
			<INDEXES>
        		<INDEX NAME="userid" UNIQUE="false" FIELDS="userid"/>
      		</INDEXES>
      	</TABLE>
      	<TABLE NAME="groupformation_question_settings" COMMENT="input requirements of lecturer">
      		<FIELDS>
      			<FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="true"/>
      			<FIELD NAME="groupformation" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      			<FIELD NAME="szenario" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      			<FIELD NAME="questionnumber" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      			<FIELD NAME="topicvalues" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
      			<FIELD NAME="knowledgevales" TYPE="text" NOTNULL="true" SEQUENCE="false"/> 
      		</FIELDS>
      		
      		<KEYS>
      			<KEY NAME="primary" TYPE="primary" FIELDS="id"/>
				<KEY NAME="groupformation" TYPE="foreign" FIELDS="groupformation" REFTABLE="groupformation" REFFIELDS="id"/>
      		</KEYS>
      	</TABLE>
      	<TABLE NAME="groupformation_grouping_settings" COMMENT="settings for generating core_group(s)">
      		<FIELDS>
      			<FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="true"/>
      			<FIELD NAME="groupformation" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      			<FIELD NAME="namingschema" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      			<FIELD NAME="userpergroup" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      		</FIELDS>
      		
      		<KEYS>
      			<KEY NAME="primary" TYPE="primary" FIELDS="id"/>
				<KEY NAME="groupformation" TYPE="foreign" FIELDS="groupformation" REFTABLE="groupformation" REFFIELDS="id"/>
      		</KEYS>
      	</TABLE>
	</TABLES>
	</XMLDB>